model WhatsappLead {
  id          Int      @id @default(autoincrement())
  phone       String
  countryCode String
  createdAt   DateTime @default(now())
}

model WhatsappFrio {
  id            Int      @id @default(autoincrement())
  phone         String
  countryCode   String
  createdAt     DateTime @default(now())
  isGroupMember Boolean  @default(false)
}

model Customer {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  cpf             String   @unique
  whatsapp        String
  instagram       String?
  enrollmentDate  DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([email])
  @@index([cpf])
}

model Cronograma {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  password        String
  cpf             String   @unique
  whatsapp        String
  instagram       String?
  enrollmentDate  DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([email])
  @@index([cpf])
} 